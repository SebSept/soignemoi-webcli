<form method="post" action="{{ path('app_login') }}">

    {# message d'erreur #}
    {% if error.messageKey is defined %}
        {% if error.messageKey == 'Invalid credentials.' %}
            <p>Identification ratée</p>
        {% else %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <p>{{ error.messageKey }}</p>
    {% endif %}

    {# affichage de l'identitié de l'utilisateur et lien de logout #}
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
        {# form de connexion #}
    {% else %}

        <h1 class="h3 mb-3 font-weight-normal">Identification</h1>

        {% if app.debug %}
            <p>patient@patient.com:hello</p>
        {% endif %}

        <label for="inputEmail">Email</label>
        <input type="text"
               value="{{ last_username|default('') }}"
               name="email"
               id="inputEmail"
               class="form-control"
               autocomplete="email"
               required autofocus>

        <label for="inputPassword">Password</label>
        <input type="password"
               name="password"
               id="inputPassword"
               class="form-control"
               autocomplete="current-password"
               required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-lg btn-primary m-2" type="submit" id="submit">
            Connexion
        </button>

    {% endif %}
</form>
