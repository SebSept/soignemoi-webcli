{% extends 'base.html.twig' %}

{% block title %}Hello UserHomeController!{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h1>Mes séjours</h1>

        {% if sejours is not empty %}
            <ul>
                {% for sejour in sejours %}
                    <li>{{ sejour.id }} {{ sejour.startDate|date("m/d/Y") }}</li>
                {% endfor %}
            </ul>

        {% else %}
            <p>Pas de séjours</p>
        {% endif %}
    </div>
{% endblock %}
